{
  "$schema": "https://json.schemastore.org/tsconfig",
  "ts-node": {
    "files": true
  },
  "files": ["src/index.ts"],
  "include": ["src"],
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
